/* Card text styles */
.core-card h3 {
    font-size: 1.2rem;
    margin-bottom: 0.8rem;
    font-weight: 600;
    color: #fff;
    transition: all 0.3s ease;
    text-align: left;
}

.core-card p {
    font-size: 0.9rem;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    text-align: left;
    margin: 0;
}

/* Position icon and text */
.core-card i, .core-card h3, .core-card p {
    position: relative;
    z-index: 1;
}

/* Card hover effects */
.core-card:hover {
    transform: translateY(-5px);
    border-color: rgba(99, 102, 241, 0.4);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.25);
}

.core-card:hover i {
    transform: scale(1.1);
    background-color: rgba(99, 102, 241, 0.15);
}

/* Cursor backdrop effect */
.core-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        600px circle at var(--x, 50%) var(--y, 50%),
        rgba(99, 102, 241, 0.07) 0%,
        rgba(22, 22, 24, 0) 60%
    );
    opacity: 0;
    z-index: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
}

.core-card:hover::after {
    opacity: 1;
}

/* Clean Cursor Backdrop Effect - Fixed Version */
.cursor-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        600px circle at var(--x, 50%) var(--y, 50%),
        rgba(99, 102, 241, 0.08) 0%,
        rgba(22, 22, 24, 0) 60%
    );
    opacity: 0;
    z-index: 0;
    transition: opacity 0.15s ease;
    pointer-events: none;
}

.core-card.cursor-active .cursor-backdrop {
    opacity: 1;
}

/* Ensure mouse tracking works properly */
@keyframes onMouseMove {
    to {
        background-position: var(--x) var(--y);
    }
}

/* Mobile styles for the bento grid */
@media screen and (max-width: 768px) {
    .core-grid {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        padding: 0 1rem;
    }
    
    .core-card, .div1, .div2, .div3, .div4, .div6 {
        grid-column: 1;
        grid-row: auto;
        margin-bottom: 20px;
    }
    
    .core-card {
        padding: 1.5rem;
    }
    
    .core-section h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
    }
}