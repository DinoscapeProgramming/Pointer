:root {
    --primary-gradient: linear-gradient(120deg, #6a11cb, #2575fc);
    --text-color: #ffffff;
    --background: #000000;
    --nav-height: 64px;
    --grid-size: 30px;
    --grid-color: rgba(255, 255, 255, 0.1);
    --mobile-padding: 1rem;
    --navbar-background: rgba(0, 0, 0, 0.8);
    --navbar-border: rgba(255, 255, 255, 0.1);
    --navbar-height: 70px;
    --accent-color: #6366f1;
    --accent-color-rgba: rgba(99, 102, 241, 0.8);
    --accent-color-light: rgba(99, 102, 241, 0.2);
}

html {
    scroll-behavior: smooth;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Floating Navbar Styles */
.floating-navbar {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: auto;
    max-width: 90%;
    height: var(--navbar-height);
    background-color: rgba(0, 0, 0, 0.65);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 18px;
    z-index: 1000;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
}

.navbar-container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1.5rem;
}

.navbar-logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--text-color);
    padding: 0 10px;
}

.navbar-logo img {
    height: 32px;
    margin-right: 10px;
    transition: transform 0.3s ease;
}

.navbar-logo:hover img {
    transform: scale(1.1);
}

.navbar-logo span {
    font-size: 1.5rem;
    font-weight: 600;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.navbar-links {
    display: flex;
    gap: 1.5rem;
    margin: 0 1rem;
}

.navbar-links a {
    color: var(--text-color);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    position: relative;
    transition: all 0.3s ease;
    padding: 0.5rem 0.8rem;
    border-radius: 8px;
}

.navbar-links a:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

.navbar-links a::after {
    content: '';
    position: absolute;
    bottom: 5px;
    left: 50%;
    transform: translateX(-50%);
    width: 5px;
    height: 5px;
    background: var(--primary-gradient);
    border-radius: 50%;
    opacity: 0;
    transition: all 0.3s ease;
}

.navbar-links a:hover::after {
    opacity: 1;
    width: 5px;
}

.navbar-mobile-toggle {
    display: none;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    transition: background-color 0.3s ease;
}

.navbar-mobile-toggle:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

/* Main content padding for navbar */
.hero, .downloads-hero {
    padding-top: calc(var(--navbar-height) + 40px);
}

/* Mobile styles for navbar */
@media screen and (max-width: 768px) {
    .floating-navbar {
        width: 90%;
    }
    
    .navbar-links {
        display: none;
        position: absolute;
        top: calc(var(--navbar-height) - 10px);
        left: 0;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        flex-direction: column;
        padding: 1rem 0;
        border-radius: 0 0 18px 18px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-top: none;
    }
    
    .navbar-links.active {
        display: flex;
    }
    
    .navbar-links a {
        padding: 1rem 2rem;
        border-radius: 0;
    }
    
    .navbar-links a::after {
        bottom: 8px;
    }
    
    .navbar-mobile-toggle {
        display: block;
    }
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: var(--background);
    color: var(--text-color);
    min-height: 100vh;
    overflow-x: hidden;
}

.navbar,
.nav-links,
.nav-links a,
.nav-links a::after,
.nav-actions,
.download-btn,
.login-btn,
.mobile-menu-btn {
    display: none;
}

.hero {
    padding-top: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    text-align: center;
    background: var(--background);
    position: relative;
    overflow: hidden;
    --cursor-x: 50%;
    --cursor-y: 50%;
}

.hero-content {
    z-index: 1;
    margin-top: 15vh;
    margin-bottom: 2rem;
    position: relative;
}

.hero h1 {
    font-size: 7rem;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -2px;
    animation: fadeInUp 0.8s ease-out forwards;
}

.hero p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
    opacity: 0;
}

.download-windows-btn {
    background: var(--text-color);
    color: var(--background);
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
    opacity: 0;
    transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.download-windows-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--primary-gradient);
    opacity: 0;
    z-index: -1;
    transition: opacity 0.3s ease;
}

.download-windows-btn:hover {
    color: var(--text-color);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(37, 117, 252, 0.2);
}

.download-windows-btn:hover::before {
    opacity: 1;
}

.editor-preview {
    width: 80%;
    max-width: 1200px;
    margin: 0 auto;
    background: #1e1e1e;
    border-radius: 8px 8px 0 0;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3),
                0 0 100px rgba(255, 255, 255, 0.15);
    position: absolute;
    bottom: -500px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
    animation: slideUp 1.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.6s;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s ease;
}

.editor-preview:hover {
    transform: translate(-50%, -260px);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4),
                0 0 120px rgba(255, 255, 255, 0.2);
}

.editor-preview::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100px;
    background: linear-gradient(to bottom, transparent, var(--background));
    pointer-events: none;
}

.window-controls {
    display: flex;
    gap: 0.5rem;
    padding: 1rem;
    background: #2d2d2d;
}

.control {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.close { background: #ff5f56; }
.minimize { background: #ffbd2e; }
.maximize { background: #27c93f; }

.editor-content {
    padding: 1rem;
    min-height: 400px;
    color: #d4d4d4;
    font-family: 'Fira Code', monospace;
    font-size: 14px;
    line-height: 1.5;
    background: #1e1e1e;
}

.editor-content pre {
    margin: 0;
    padding: 0;
}

.editor-content code {
    display: block;
    padding: 1rem;
    color: #d4d4d4;
}

.grid-background {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        linear-gradient(var(--grid-color) 1px, transparent 1px),
        linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
    background-size: var(--grid-size) var(--grid-size);
    opacity: 0.3;
    z-index: -1;
    pointer-events: none;
}

/* Remove beam effects */
.grid-background::before,
.grid-background::after,
.beam-h2,
.beam-v2 {
    display: none;
}

/* Keep hover effects for hero section */
.hero::before {
    content: '';
    position: absolute;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(37, 117, 252, 0.15) 0%, transparent 70%);
    pointer-events: none;
    left: var(--cursor-x);
    top: var(--cursor-y);
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
}

.hero.cursor-active::before {
    opacity: 1;
}

.features-section {
    padding: 100px 2rem;
    background: var(--background);
    position: relative;
}

.features-section h2 {
    text-align: center;
    font-size: 3rem;
    margin-bottom: 4rem;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.feature-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    border: 1px solid rgba(255, 255, 255, 0.15);
    cursor: pointer;
}

.feature-card:nth-child(1) { animation-delay: 0.2s; }
.feature-card:nth-child(2) { animation-delay: 0.4s; }
.feature-card:nth-child(3) { animation-delay: 0.6s; }

.feature-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

.feature-card:hover i {
    transform: scale(1.2);
}

.feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
}

.pricing-section {
    padding: 100px 2rem;
    background: var(--background);
    position: relative;
}

.pricing-section h2 {
    text-align: center;
    font-size: 3rem;
    margin-bottom: 4rem;
}

.pricing-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
}

.pricing-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 3rem 2rem;
    border-radius: 12px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    border: 1px solid rgba(255, 255, 255, 0.15);
}

.pricing-card:nth-child(1) { animation-delay: 0.2s; }
.pricing-card:nth-child(2) { animation-delay: 0.4s; }

.pricing-card.featured {
    background: rgba(37, 117, 252, 0.1);
    border: 2px solid #2575fc;
}

.pricing-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
}

.pricing-card h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
}

.price {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 2rem;
}

.price span {
    font-size: 1.2rem;
    opacity: 0.7;
}

.pricing-card ul {
    list-style: none;
    margin-bottom: 2rem;
}

.pricing-card li {
    margin-bottom: 1rem;
    opacity: 0.9;
}

.pricing-btn {
    background: var(--primary-gradient);
    color: var(--text-color);
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.pricing-btn:hover {
    transform: translateY(-2px);
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes float {
    0% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-10px);
    }
    100% {
        transform: translateY(0px);
    }
}

.hero-content h1 {
    animation: fadeInUp 0.8s ease-out forwards;
}

.hero-content p {
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
    opacity: 0;
}

.download-windows-btn {
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
    opacity: 0;
    transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
}

