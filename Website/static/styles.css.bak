/* Glow effect base styles */
.feature-card,
.pricing-card,
.core-card {
    --glow-angle: 0deg;
    --border-size: 1px;
    position: relative;
    overflow: visible;
    background: rgba(255, 255, 255, 0.05);
    box-shadow: 0 0 0 0 rgba(106, 17, 203, 0);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.15);
}

.feature-card::before,
.pricing-card::before,
.core-card::before {
    content: '';
    position: absolute;
    inset: calc(-1 * var(--border-size));
    border-radius: inherit;
    padding: var(--border-size);
    background: conic-gradient(
        from var(--glow-angle),
        rgba(106, 17, 203, 0.4),
        rgba(37, 117, 252, 0.4),
        rgba(106, 17, 203, 0),
        rgba(37, 117, 252, 0),
        rgba(106, 17, 203, 0),
        rgba(37, 117, 252, 0),
        rgba(106, 17, 203, 0.4)
    );
    -webkit-mask: 
        linear-gradient(#000 0 0) content-box, 
        linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.2s ease;
}

.feature-card.glow::before,
.pricing-card.glow::before,
.core-card.glow::before {
    opacity: 1;
}

.feature-card.glow,
.pricing-card.glow,
.core-card.glow {
    box-shadow: 
        0 0 15px 2px rgba(106, 17, 203, 0.2),
        0 0 30px 5px rgba(37, 117, 252, 0.1);
}

/* Remove the old ::after pseudo-elements */
.feature-card::after,
.pricing-card::after,
.core-card::after {
    content: none;
}

